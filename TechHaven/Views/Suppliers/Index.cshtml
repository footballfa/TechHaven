@model IEnumerable<TechHaven.Models.Suppliers>

@{
    ViewData["Title"] = "Suppliers";
}

<h1>Suppliers</h1>

<p>
    <a class="btn btn-success" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SupplierName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SupplierContact)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SupplierProduct)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeliveryTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SupplierName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SupplierContact)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SupplierProduct)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeliveryTime)
            </td>
            <td>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a class="btn btn-info" asp-action="Edit" asp-route-id="@item.SuppliersID">Edit</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.SuppliersID">Delete</a>
                    }
                    <a class="btn btn-warning" asp-action="Details" asp-route-id="@item.SuppliersID">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
